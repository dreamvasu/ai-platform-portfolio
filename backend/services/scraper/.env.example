# Paper Scraper Service - Environment Variables

# Service Configuration
SERVICE_NAME=paper-scraper
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
PORT=8001

# Django Backend URL (for webhooks)
DJANGO_API_URL=http://localhost:8000
DJANGO_API_KEY=your-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Scraping Configuration
MAX_RESULTS_PER_SOURCE=100
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1.0

# arXiv API
ARXIV_BASE_URL=http://export.arxiv.org/api/query

# Hugging Face (future)
HUGGINGFACE_API_URL=https://huggingface.co

# Papers with Code (future)
PAPERSWITHCODE_API_URL=https://paperswithcode.com

# Health Check
HEALTH_CHECK_ENABLED=true
