# Document Processor Service - Environment Variables

# Service Info
SERVICE_NAME=document-processor
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Server
PORT=8003
HOST=0.0.0.0

# Django Backend
DJANGO_API_URL=http://localhost:8000

# Google Cloud
GOOGLE_CLOUD_PROJECT=
GOOGLE_CLOUD_BUCKET=

# ChromaDB
CHROMADB_HOST=localhost
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIRECTORY=./chromadb_data

# Processing
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Vertex AI
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=textembedding-gecko@003

# CORS
CORS_ORIGIN=*
